<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kdotj.colorpickertoolbar.MainActivity"
    android:background="#EDEDED">

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/sp_indicator"
        android:gravity="top"
        android:dropDownWidth="match_parent"
        android:entries="@array/indicators"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_color"
        android:textSize="24sp"
        android:fontFamily="sans-serif-medium"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.kdotj.color_picker_toolbar.ColorPickerToolbar
        android:id="@+id/color_picker_toolbar"
        android:layout_alignParentBottom="true"
        app:indicatorColor="#FFF"
        app:backgroundColor="#333"
        app:minimumAlphaValue="50"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>
